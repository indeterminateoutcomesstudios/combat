<form {{action (route-action 'save') on='submit'}} class="traditional">
  <div class="subheader">
    <p class="sub" style="color: white; font-size: 3.2rem">
      {{if model.isNew 'Add Player Character' model.name}}
    </p>
    <p class="actions">
      {{#unless model.isNew}}
        <button class="button danger" {{action (route-action 'delete' model)}}>Delete</button>
      {{/unless}}
      {{#link-to 'player-characters.index' classNames='button'}}Cancel{{/link-to}}
      <button type="submit" class="button primary">Save</button>
    </p>
  </div>
  {{edit-player-character name=name model=model onSave=(route-action 'save')}}
</form>
