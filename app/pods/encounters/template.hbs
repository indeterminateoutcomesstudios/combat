<div class="sidebar">
  <header>
    <h2>Encounters</h2>
    <button {{action (route-action 'create')}} class='button'>Add Encounter</button>
  </header>
  <ul class="content">
    {{#each model.encounters as |encounter|}}
      <li>
        {{#link-to 'encounters.details' encounter.id}}{{encounter.name}}{{/link-to}}
      </li>
    {{/each}}
  </ul>
  <header>
    <h2>Monsters</h2>
  </header>
  <ul class="content">
    {{#each model.monsters as |monster|}}
      <li>
        <a href {{action (route-action 'addMonster' monster)}}>
          {{monster.name}}
        </a>
      </li>
    {{/each}}
  </ul>
</div>
<div class="main">
  <div class="constrained">
    {{outlet}}
  </div>
</div>


