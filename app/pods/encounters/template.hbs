<div class="sidebar">
  <p>Encounters <button {{action (route-action 'create')}}>+</button></p>
  <ul>
    {{#each model.encounters as |encounter|}}
      <li>
        {{#link-to 'encounters.details' encounter.id}}{{encounter.name}}{{/link-to}}
        <span {{action (route-action 'delete' encounter)}}>&times;</span>
      </li>
    {{/each}}
  </ul>
  <p>Monsters</p>
  <ul>
    {{#each model.monsters as |monster|}}
      <li>
        {{monster.name}}
        <span {{action (route-action 'addMonster' monster)}}>+</span>
      </li>
    {{/each}}
  </ul>
</div>
<div class="main">
  {{outlet}}
</div>
