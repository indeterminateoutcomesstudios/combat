<div class="sidebar">
  <header>
    <h2>Encounters</h2>
    <button {{action (route-action 'create')}} class='button'>Add</button>
  </header>
  <ul class="content">
    {{#each (sort-by 'name' model.encounters) as |encounter|}}
      <li>
        {{#link-to 'encounters.details' encounter.id}}{{encounter.name}}{{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>
<div class="main">
  <div class="constrained">
    {{outlet}}
  </div>
</div>
