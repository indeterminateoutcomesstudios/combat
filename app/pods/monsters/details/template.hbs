<header>
  <h2>Monster</h2>
</header>
<form {{action (route-action 'save') on='submit'}}>
  <div class="subheader">
    <p class="sub" style="color: white; font-size: 3.2rem">{{model.name}}</p>
    <p class="actions">
      <button class="button danger" {{action (route-action 'delete' model)}}>Delete</button>
      {{#link-to 'monsters.index' classNames='button'}}Cancel{{/link-to}}
      <button type="submit" class="button primary">Save</button>
    </p>
  </div>
  {{edit-monster model=model onSave=(route-action 'save')}}
</form>
