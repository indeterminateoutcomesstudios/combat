<div class="sidebar">
  <header>
    <h2>Monsters</h2>
    {{#link-to 'monsters.details' 'new' classNames='button'}}Add{{/link-to}}
  </header>
  <ul class="content">
    {{#each (sort-by 'name' (reject-by 'isNew' true model)) as |monster|}}
      <li>
        {{#link-to 'monsters.details' monster.id}}{{monster.name}}{{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>
<div class="main">
  {{liquid-outlet class='constrained'}}
</div>
