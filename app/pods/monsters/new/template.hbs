<header>
  <h2>Monster</h2>
</header>
<form {{action (route-action 'save') on='submit'}}>
  <div class="subheader">
    <p class="sub" style="color: white; font-size: 3.2rem">Add Monster</p>
    <p class="actions">
      {{#link-to 'monsters.index' classNames='button'}}Cancel{{/link-to}}
      <button type="submit" class="button primary">Save</button>
    </p>
  </div>
  {{edit-monster name=name model=model onSave=(route-action 'save')}}
</form>
