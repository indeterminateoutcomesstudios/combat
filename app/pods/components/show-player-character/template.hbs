<form class="inline">
  <p style="flex-shrink: 0.5;">
    <label for="name">Name</label>
    {{input value=model.name focus-out='update'}}
  </p>
  <p>
    <label for="currentHitPoints">Current HP</label>
    {{input value=model.currentHitPoints type='number' focus-out='update'}}
  </p>
  <p>
    <label for="hitPoints">Maximum HP</label>
    {{input value=model.hitPoints type='number' focus-out='update'}}
  </p>
  <p>
    <label for="initiative">Initiative</label>
    {{input value=model.initiative type='number' focus-out='update'}}
  </p>
  <p>
    <label for="armorClass">Armor Class</label>
    {{input value=model.armorClass type='number' focus-out='update'}}
  </p>
</form>
